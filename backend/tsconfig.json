{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@shared/*": ["../shared/*"],
      "@utils/*": ["src/utils/*"],
      "@repositories/*": ["src/repositories/*"]
    },
    "types": ["node", "mocha", "chai", "supertest", "chai-http"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*", 
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}