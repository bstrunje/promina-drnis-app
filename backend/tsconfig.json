{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist/src",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src*"],
      "@shared/*": ["../shared/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@repositories/*": ["./src/repositories/*"]
    },
    "types": ["node", "mocha", "chai", "supertest", "chai-http"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
, "hash-password.js"  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "references": [
    { "path": "../shared" }
  ]
}