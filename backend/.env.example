PORT=3000
NODE_ENV=development

# Database Configuration
# For multi-tenancy optimization, Prisma automatically manages connection pooling
# Default pool size: 10 connections (can be adjusted via connection_limit parameter)
# Example with custom pool: postgres://user:password@localhost:5432/dbname?connection_limit=20
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Security
JWT_SECRET=your_jwt_secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret

# Global System Manager (Can manage all organizations)
# This is the ONLY System Manager created during seed
# Org-specific System Managers are created automatically when creating organizations
GLOBAL_SYSTEM_MANAGER_USERNAME=global_manager
GLOBAL_SYSTEM_MANAGER_PASSWORD=change_this_password
GLOBAL_SYSTEM_MANAGER_EMAIL=global@managemembers.vercel.app
