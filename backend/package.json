{
  "name": "@promina-drnis-app/backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc -b",
    "postbuild": "copyfiles -u 1 \"src/**/*.json\" dist",
    "start": "node --loader ts-node/esm --experimental-specifier-resolution=node src/server.ts",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --esm src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "mocha -r ts-node/register 'tests/**/*.test.ts'",
    "test:watch": "mocha -r ts-node/register -w --watch-files 'tests/**/*.test.ts' 'tests/**/*.test.ts'",
    "migrate": "node dist/scripts/runMigration.js"
  },
  "dependencies": {
    "@promina-drnis/shared": "1.0.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.20",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.6",
    "@types/nodemailer": "^6.4.16",
    "@types/pg": "^8.10.9",
    "@types/sinon": "^10.0.20",
    "@types/sinon-chai": "^3.2.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "chai": "^4.5.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "mocha": "^10.8.2",
    "rimraf": "^6.0.1",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },

  "optionalDependencies": {
    "@promina-drnis/shared": "1.0.0"
}
}
