{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "composite": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}