{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/Dockerfile"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/Dockerfile"
    },
    {
      "src": "/((?!api/|assets/|vite.svg|_next/|favicon.ico|logo.png|manifest.json|robots.txt|sw.js).*)",
      "dest": "frontend/dist/index.html",
      "check": true
    }
  ]
}