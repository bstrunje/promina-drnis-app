{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/dist/**",
          "prisma/**"
        ]
      }
    },
    {
      "src": "frontend/dist",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[...slug]" },
    { "source": "/uploads/(.*)", "destination": "/api/[...slug]" },
    { "source": "/health", "destination": "/api/[...slug]" },
    { "source": "/(.*)", "destination": "/frontend/dist/$1" }
  ]
}