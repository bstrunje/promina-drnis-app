{
    "version": 2,
    "framework": "vite",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "installCommand": "npm install",
    "public": true,
    "routes": [
      { "handle": "filesystem" },
      { "src": "/api/(.*)", "dest": "http://localhost:3000/api/$1" },
      { "src": "/(.*)", "dest": "/index.html" }
    ],
    "github": {
      "enabled": true,
      "silent": true
    },
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node"
      }
    ]
  }