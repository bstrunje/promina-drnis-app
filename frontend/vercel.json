{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://promina-drnis-api.onrender.com/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://promina-drnis-api.onrender.com/uploads/:path*"
    },
    {
      "source": "/((?!api/|uploads/|assets/).*)",
      "destination": "/index.html"
    }
  ]
}