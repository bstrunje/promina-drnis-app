{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/types/*"],
      "@components/*": ["./components/*"]
    }
  },
  "include": [
    "src/**/*",
    "shared/**/*",
    "components/**/*",
    "components/ui/**/*",
    "components/ProtectedRoute.tsx",
    "components/Navigation.tsx",
    "components/ErrorMessage.tsx",
    "components/MembershipFeeSection.tsx",
    "components/MembershipCardManager.tsx",
    "components/MemberMessagesSection.tsx",
    "components/MembershipHistory.tsx",
    "components/MemberProfileImage.tsx",
    "components/MembershipDetailsCard.tsx",
    "components/ActivityHistory.tsx",
    "components/EditMemberForm.tsx",
    "components/ConfirmationModal.tsx",
    
    "components/MemberBasicInfo.tsx",
    "components/MemberActivityStatus.tsx",
    "components/ui/button.tsx",
    "components/ui/use-toast.tsx",
    "components/ui/toaster.tsx"
  ],
  "references": []
}